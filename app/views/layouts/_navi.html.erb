<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <!-- Brand and toggle get grouped for better mobile display -->
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to root_path, id: 'logo' do %>
      <%= image_tag('ipdb-logo.png') %>
    <% end %>
    <div class='social-btns'>
      <a href="https://twitter.com/ipdb" target="_blank"><span class="glyph-item icon-social-twitter animated rotateIn" aria-hidden="true"></span></a>
      <a href="https://www.facebook.com/ipcdb" target="_blank"><span class="glyph-item icon-social-facebook animated rotateIn" aria-hidden="true"></span></a>
    </div>
  </div>

  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse navbar-ex1-collapse">
    <ul class="nav navbar-nav navbar-left">
      <li><%= link_to "<i class='fa fa-home'></i> Home".html_safe, root_path, :title => "Home" %></li>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class='fa fa-list'></i> Podcasts</a>
        <ul class="dropdown-menu">
          <li><%= link_to "<i class='fa fa-fw fa-microphone'></i> Podcasts".html_safe, podcasts_path %></li>
          <li><%= link_to "<i class='fa fa-fw fa-university fa-fw'></i> Companies".html_safe, companies_path %></li>
          <li>
            <a href="http://awards.ipdb.net" target="_blank">
              <i class='fa fa-fw fa-trophy fa-fw'></i> Awards
            </a>
          </li>
        </ul>
      </li>

      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= fa_icon "globe" %> About</a>
        <ul class="dropdown-menu">
          <li><%= link_to "<i class='fa fa-question-circle'></i> FAQ".html_safe, faq_path %></li>
        </ul>
      </li>

      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= fa_icon "newspaper-o" %> News</a>
        <ul class="dropdown-menu">
          <li><%= link_to "IPDB Blog", "http://news.ipdb.net", target: "_blank" %></li>
        </ul>
      </li>

      <% if user_signed_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= fa_icon "cogs" %></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Edit Profile".html_safe, edit_user_registration_path %></li>
            <li><%= link_to "View Profile", person_path(current_user.person) %></li>
            <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
        <%= form_tag(podcasts_path, :method => "get", id: "search-form", class: "navbar-form navbar-right") do %>
          <div class="form-group">
            <%= text_field_tag :search, params[:search], placeholder: "Search Podcasts", class: "form-control" %>
          </div>
          <%= submit_tag "Search", :name => nil, class: "btn btn-default" %>
        <% end %>
      <% else %>
        <li><%= link_to "Sign in", new_user_session_path %></li>
        <%= link_to user_omniauth_authorize_path(provider: :facebook), class: 'btn btn-block btn-social btn-facebook' do %>
          <i class="fa fa-facebook"></i><span> Login</span>
        <% end %>
        <%= form_tag(podcasts_path, :method => "get", id: "search-form", class: "navbar-form navbar-right") do %>
          <div class="form-group">
            <%= text_field_tag :search, params[:search], placeholder: "People & Podcasts", class: "form-control" %>
          </div>
          <%= submit_tag "Search", :name => nil, class: "btn btn-default" %>
        <% end %>
      <% end %>
    </ul>
  </div><!-- /.navbar-collapse -->
</nav>
