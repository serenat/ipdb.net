<div class="podcasts-list">
  <h1>Listing podcasts</h1>
  <hr />
  <div class="row">
    <% @podcasts.each_with_index do |podcast, i| %>
      <div class="col-sm-4 col-md-2-4">
        <%= render partial: 'shared/podcast_thumb', locals: {podcast: podcast, rank: rank(@paginate.prev_page, i)} %>
      </div>
    <% end %>
  </div>
</div>
  <!-- End strip 3 -->
<div class="row nopadding">
  <%= paginate @paginate, :params => { :anchor => 'podcasts' }%>
</div>