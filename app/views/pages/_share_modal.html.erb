<style>
  .share-box {
    background-image: url(<%= image_url('microphone-dark.jpg') %>);
  }

  .share-box .modal-title {
    font-size: 18px;
    font-weight: 500;
    margin-top: 5px;
    margin-left: 10px;
  }
  .share-box .modal-header {
    border-bottom:0px;
  }
  .share-box .modal-footer {
    border-top:0px;
  }
  .share-box .btn-social {
    margin-top: 10px;
    width: 100%;
  }

  .share-box .btn-facebook {
    color: #FFFFFF;
    margin-top: 30px;
    background-color: #3B5998;
    text-shadow: none;
    border-color: rgba(0, 0, 0, 0.2)
  }

  .share-box .btn-facebook:hover {
    color: #FFFFFF;
    background-color: #2D4373;
    text-shadow: none;
    border-color: rgba(0, 0, 0, 0.2)
  }

  .share-box .btn-twitter {
    color: #FFFFFF;
    background-color: #55acee;
    border-color: rgba(0, 0, 0, 0.2);
  }
  .share-box .btn-twitter:hover {
    color: #FFFFFF;
    background-color: #2795e9;
    border-color: rgba(0, 0, 0, 0.2);
  }

</style>
<!-- Modal -->
<div class="modal fade share-box" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Share IPDb with your family, friends, and fans. Build the buzz!</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-6">
            <%= image_tag 'ipdb-logo.png' %>
          </div>
          <div class="col-sm-6">
            <a
              class="btn btn-social btn-facebook btn-lg"
              target="_blank">
              <i class="fa fa-facebook"></i> Share with Facebook
            </a>
            <br>
            <a
              class="btn btn-social btn-twitter btn-lg"
              href="https://twitter.com/intent/tweet?url=http://ipdb.net&via=ipdb&text=I just signed up with @IPDb. Join the fun with me!"
              target="_blank">
              <i class="fa fa-twitter"></i> Share with Twitter
            </a>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <br />
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  // initialize facebook js sdk
  window.fbAsyncInit = function() {
    FB.init({
      appId      : <%= Rails.application.secrets.facebook['app_id'] %>,
      xfbml      : true,
      version    : 'v2.4'
    });
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
  //

  $(window).load(function(){
    $('.share-box .btn-facebook').on('click', function() {
      FB.ui({
        method: 'share',
        href: 'http://010ff6de.ngrok.io/',
      }, function(response){});
    });

    $('.share-box').modal('show');
  });

  //twitter social buttton
  !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');
</script>
