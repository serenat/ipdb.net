<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
      <%= render 'profile/sidebar' %>
    </div>

    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <h1 class="page-header">Subscription</h1>
      <% if @subscription %>
        <%= render partial: 'subscriptions/basic' if @subscription.plan.basic? %>
        <%= render partial: 'subscriptions/silver' if @subscription.plan.silver? %>
      <% else %>
        <%= render partial: 'subscriptions/not_subscriber' %>
      <% end %>
    </div>
  </div>
</div>
