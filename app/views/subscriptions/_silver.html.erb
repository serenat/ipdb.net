<div class="row">
  <div class="col-sm-8">
    <table class="table subscription-table">
      <colgroup>
        <col span="1" style="width: 50%;">
        <col span="1" style="width: 30%;">
        <col span="1" style="width: 20%;">
      </colgroup>
      <thead>
        <tr>
          <th><h3>Plan details</h3></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            Current plan
          </td>
          <td>
            <span>Silver</span>
          </td>
          <td>
            <button type="button" class="btn btn-sm btn-success" data-toggle="modal" data-target="#downgrade-plan-modal">Downgrade to basic</button>
          </td>
        </tr>
        <tr>
          <td>
            Status
          </td>
          <td>
            <%= @subscription.status.capitalize %>
          </td>
          <td></td>
        </tr>
        <tr>
          <td>
            Cost
          </td>
          <td>
            $13.00 per month
          </td>
          <td></td>
        </tr>
        <tr>
          <td>
            Subscription started
          </td>
          <td>
            <%= l @subscription.start_date, format: :short %>
          </td>
          <td></td>
        </tr>
        <tr>
          <td>
            Next billing date
          </td>
          <td>
            <%= l @subscription.end_date, format: :short %>
          </td>
          <td></td>
        </tr>
      </tbody>
      <tfoot>
        <tr><td></td><td></td><td></td></tr>
      </tfoot>
    </table>
  </div>
</div>
<!-- /.modal upgrade with billing -->
<div class="modal" id="downgrade-plan-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h5 class="modal-title">Downgrade to basic plan</h5>
      </div>
      <%= form_tag subscription_downgrade_path, id: 'downgrade-plan', remote: true, data: { type: 'json' } do %>
      <div class="modal-body">
        <div class="checkbox">
          <label>
            <%= check_box_tag :agree, :yes, false, {required: true} %>
            I want downgrade my plan to basic.
          </label>
        </div>
      </div>
      <div class="modal-footer">
        <!--
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-warning pull-left">Save Draft</button>
        -->
        <div class="row">
          <div class="col-sm-offset-9 col-sm-3">
            <%= submit_tag 'Downgrade', class: 'btn btn-primary btn-block' %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
