<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Listing companies</h1>
    </div>
    <div class="col-md-6">
      <% if can? :create, Company %>
        <span class="help-block pull-right">Don't see your company listed? Get your company listed here today.</span>
        <br/><br />
        <%= link_to 'Add New Company', new_company_path, class: "btn btn-primary btn-lg pull-right" %>
      <% end %>
    </div>
  </div>
  <div class="row companies">
    <div class="col-sm-12">
      <%= paginate @companies %>
      <hr />
      <% if can? :show, Company %>
        <% @companies.each do |company| %>
        <li class="well col-md-2">
          <%= link_to company do %>
            <%= image_tag company.image, alt: company.name, class: 'company-logo' %>
          <% end %>
          <br />
          <div class="rating-box">
            <%= rating_for company %>
          </div>
          <h4><%= link_to company.name, company %></h4>
        </li>
        <% end %>
      <% else %>
        <% @companies.each do |company| %>
        <li class="well col-md-2">
          <%= image_tag 'upgrade_to_ipdb_silver.jpg', alt: company.name, class: 'company-logo' %>
          <br />
          <div class="rating-box">
          </div>
          <h4><%= company.name %></h4>
        </li>
        <% end %>
      <% end %>
      <%= paginate @companies %>
    </div>
  </div>
</div>
